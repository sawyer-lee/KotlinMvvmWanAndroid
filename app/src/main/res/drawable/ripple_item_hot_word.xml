<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="@color/whitePrimary">
    <!--此item为正常情况下的显示效果-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/lightYellow" />
            <corners android:radius="12dp" />
            <size
                tools:height="24dp"
                tools:width="48dp" />
            <padding
                android:bottom="4dp"
                android:left="12dp"
                android:right="12dp"
                android:top="4dp" />
        </shape>
    </item>
    <!--如果在一个ripple标签中，添加一个item，其id为@android:id/mask，
    drawable属性为引用的形状(shape) ，则水波效果会限定在shape对应的区域内部-->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/lightYellow" />
            <corners android:radius="12dp" />
            <size
                tools:height="24dp"
                tools:width="48dp" />
            <padding
                android:bottom="4dp"
                android:left="12dp"
                android:right="12dp"
                android:top="4dp" />
        </shape>
    </item>
</ripple>